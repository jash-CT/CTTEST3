{
  "info": {
    "name": "Simple Wallet API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{ \"name\": \"Alice\", \"email\": \"alice@example.com\", \"password\": \"pass123\" }" },
        "url": { "raw": "http://localhost:3000/api/auth/register", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","auth","register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"email\": \"alice@example.com\", \"password\": \"pass123\" }" },
        "url": { "raw": "http://localhost:3000/api/auth/login", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","auth","login"] }
      }
    },
    {
      "name": "Get Balance",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:3000/api/wallet/balance", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","wallet","balance"] }
      }
    },
    {
      "name": "Add Money",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" },{ "key":"Authorization","value":"Bearer {{token}}" }],
        "body": { "mode": "raw", "raw": "{ \"amount\": 50 }" },
        "url": { "raw": "http://localhost:3000/api/wallet/add", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","wallet","add"] }
      }
    },
    {
      "name": "Transfer",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" },{ "key":"Authorization","value":"Bearer {{token}}" }],
        "body": { "mode": "raw", "raw": "{ \"toEmail\": \"bob@example.com\", \"amount\": 25 }" },
        "url": { "raw": "http://localhost:3000/api/wallet/transfer", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","wallet","transfer"] }
      }
    },
    {
      "name": "Transactions",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:3000/api/wallet/transactions", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","wallet","transactions"] }
      }
    }
  ]
}
